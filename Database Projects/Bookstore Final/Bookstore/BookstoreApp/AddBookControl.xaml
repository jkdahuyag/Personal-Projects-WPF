<UserControl
    x:Class="BookstoreApp.AddBookControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:addBookViewParts="clr-namespace:BookstoreApp.Parts.AddBookViewParts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookstoreApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="800"
    Loaded="AddBookControl_OnLoaded"
    mc:Ignorable="d">
    <Grid Margin="10,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Background="Transparent"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Book Info" />
                <Grid Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBox
                        Padding="5"
                        x:Name="TxtBoxTitle"
                        Height="100"
                        Text="{Binding Path=BookTitleInput, Delay=500, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Grid.Row="1"
                        Width="100"
                        HorizontalAlignment="Left"
                        Background="Gray"
                        FontSize="14"
                        Text="Title"
                        TextAlignment="Center" />
                </Grid>

                <Grid Margin="0,20" Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <TextBox
                            VerticalAlignment="Center"
                            x:Name="TxtBoxIsbn"
                            Height="30"
                            Text="{Binding Path=BookIsbnInput, Delay=500, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="ISBN"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBox
                            VerticalAlignment="Center"
                            x:Name="TxtBoxPrice"
                            Height="30"
                            Text="{Binding Path=BookPriceInput, Delay=500, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Price"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
                <Grid Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <DatePicker
                            x:Name="DtPDatePublished"
                            Height="30"
                            SelectedDate="{Binding Path=DatePublishedInput, FallbackValue=1 1 2023, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Date Published"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBox
                            VerticalAlignment="Center"
                            x:Name="TxtBoxPages"
                            Height="30"
                            Text="{Binding Path=BookPagesInput, Delay=500, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Pages"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Margin="60,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Margin="0,8,53,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Background="Transparent"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="Publisher" />

                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,8"
                            Padding="5"
                            BorderBrush="DimGray"
                            BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="PublisherTblSearchBackground"
                                    Grid.Column="1"
                                    Margin="7,3"
                                    VerticalAlignment="Center"
                                    Foreground="LightGray"
                                    Text="Search" />
                                <TextBox
                                    x:Name="PublisherTxtSearch"
                                    Grid.Column="1"
                                    Padding="5,3"
                                    VerticalContentAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    GotFocus="PublisherTxtSearch_OnGotFocus"
                                    LostFocus="PublisherTxtSearch_OnLostFocus"
                                    Text="{Binding Path=PublisherSearchText, Delay=000, UpdateSourceTrigger=PropertyChanged}" />
