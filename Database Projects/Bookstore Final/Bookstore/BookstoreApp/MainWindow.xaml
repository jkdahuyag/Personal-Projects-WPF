<Window
    x:Class="BookstoreApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BookstoreApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Book Store"
    Width="1200"
    Height="580"
    Closed="MainWindow_OnClosed"
    Loaded="MainWindow_OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Ribbon IsMinimized="True">
            <RibbonTab Header="Control">
                <RibbonGroup>
                <RibbonButton x:Name="RbnBtnAddBook" Click="RbnBtnAddBook_OnClick" Label="Add"
                              LargeImageSource="Images/plus-square-svgrepo-com.png"/>
                <RibbonButton x:Name="RbnBtnEditBook" Click="RbnBtnEditBook_OnClick" Label="Edit" 
                              LargeImageSource="Images/edit-svgrepo-com.png"/>
                <RibbonButton x:Name="RbnBtnRemoveBook" Click="RbnBtnRemoveBook_OnClick" Label="Remove"
                              LargeImageSource="Images/cross-circle-svgrepo-com.png"/>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <local:BookInfo Grid.Row="1" />
    </Grid>
</Window>
