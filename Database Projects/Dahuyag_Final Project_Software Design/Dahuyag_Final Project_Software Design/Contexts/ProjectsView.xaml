                        <Path Data="M12,8.002c-2.206,0-4,1.794-4,4c0,2.206,1.794,4,4,4s4-1.794,4-4C16,9.796,14.206,8.002,12,8.002z     M12,14.002c-1.103,0-2-0.897-2-2c0-1.103,0.897-2,2-2s2,0.897,2,2C14,13.104,13.103,14.002,12,14.002z" Fill="#757575" />
                    </Grid>
                </Grid>
            </Border>
            <StackPanel
                Grid.Column="1"
                Margin="10,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="No. of Projects Shown: " />
                <ComboBox
                    x:Name="CmbNoOfProjects"
                    Width="60"
                    Margin="10,0"
                    ItemsSource="{Binding ProjectsInView}"
                    SelectedItem="{Binding SelectedProjectsInView, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <!--<StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0" HorizontalAlignment="Right">
                <TextBlock Text="Sort by: " VerticalAlignment="Center"></TextBlock>
                <ComboBox x:Name="CmbSortCategory" SelectedItem="{Binding ProjectsInView}" Width="150" Margin="10,0"></ComboBox>
                <Button></Button>
            </StackPanel>-->

        </Grid>

        <syncfusion:CardView
            Name="CrdVwProjects"
            Grid.Row="2"
            CanGroup="False"
            SelectedItemChanged="CrdVwProjects_OnSelectedItemChanged"
            ItemsSource="{Binding Projects}"
            Orientation="Horizontal"
            SelectedItem="{Binding SelectedCardDetails, UpdateSourceTrigger=PropertyChanged}">
            <syncfusion:CardView.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ProjectTitle}" />
                </DataTemplate>
            </syncfusion:CardView.HeaderTemplate>
            <syncfusion:CardView.ItemTemplate>
                <DataTemplate>
                    <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBoxItem Padding="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Description:" />
                                <TextBlock Grid.Column="1" Text="{Binding Description}" />
                            </Grid>
                        </ListBoxItem>
                        <ListBoxItem Padding="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="1.75*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Start Date:" />
                                <TextBlock Grid.Column="1" Text="{Binding DateStart, UpdateSourceTrigger=PropertyChanged, FallbackValue='Not Yet Started', StringFormat=d}" />
                            </Grid>
                        </ListBoxItem>
                        <ListBoxItem Padding="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="1.75*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Deadline:" />
                                <TextBlock Grid.Column="1" Text="{Binding EstimatedDateEnd, UpdateSourceTrigger=PropertyChanged, StringFormat=d}" />
                            </Grid>
                        </ListBoxItem>
                        <ListBoxItem Padding="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75" />
                                    <ColumnDefinition Width="1.75*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Budget:" />
                                <TextBlock Grid.Column="1" Text="{Binding EstimatedBudget, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </ListBoxItem>

                    </ListBox>
                </DataTemplate>
            </syncfusion:CardView.ItemTemplate>
        </syncfusion:CardView>
    </Grid>

</UserControl>
