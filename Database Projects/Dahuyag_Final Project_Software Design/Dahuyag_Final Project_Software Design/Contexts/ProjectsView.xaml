<UserControl
    x:Class="Dahuyag_Final_Project_Software_Design.Contexts.ProjectsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Dahuyag_Final_Project_Software_Design.Contexts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="[syncfusionskin ]clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<Grid.Resources>
            <Style TargetType="{x:Type syncfusion:CardViewItem}" BasedOn="{StaticResource 	SyncfusionCardViewStyle}" x:Key="CardViewItemStyle">
                <Setter Property="Width" Value="250"/>
            </Style>
        </Grid.Resources>-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                Margin="15,0,0,10"
                FontSize="30"
                FontWeight="Bold"
                Text="Projects" />
            <StackPanel
                Grid.Column="1"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel>
                    <Button
                        x:Name="BtnAddProject"
                        Width="35"
                        Height="35"
                        Click="BtnAddProject_OnClick"
                        >
                        <Image Source="../Images/plus-alt-svgrepo-com.png" Stretch="Fill" />
                    </Button>
                    <TextBlock
                        FontSize="12"
                        Text="Add Project"
                        TextAlignment="Center" />
                </StackPanel>
                <StackPanel Margin="10,0">
                    <Button
                        x:Name="BtnEditProject"
                        Width="35"
                        Height="35"
                        Click="BtnEditProject_OnClick"
                        >
                        <Image Source="../Images/edit-svgrepo-com.png" Stretch="Fill" />
                    </Button>
                    <TextBlock
                        FontSize="12"
                        Text="Edit Project"
                        TextAlignment="Center" />
                </StackPanel>
                <StackPanel>
                    <Button
                        x:Name="BtnRemoveProject"
                        Width="35"
                        Height="35"
                        Click="BtnRemoveProject_OnClick"
                        >
                        <Image Source="../Images/cross-circle-svgrepo-com.png" Stretch="Fill" />
                    </Button>
                    <TextBlock
                        FontSize="12"
                        Text="Remove Project"
                        TextAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid Margin="0,8" Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Width="200"
                Margin="15,0,0,0"
                Padding="5"
                HorizontalAlignment="Left"
                BorderBrush="DimGray"
                BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        x:Name="ProjectsCardSearchBackground"
                        Grid.Column="1"
                        Margin="7,3"
                        VerticalAlignment="Center"
                        Foreground="LightGray"
                        Text="Search" />
                    <TextBox
                        x:Name="ProjectsCardTxtSearch"
                        Grid.Column="1"
                        Padding="5,3"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        GotFocus="ProjectsCardTxtSearch_OnGotFocus"
                        LostFocus="ProjectsCardTxtSearch_OnLostFocus"
                        Text="{Binding Path=ProjectsCardSearchText, Delay=500, UpdateSourceTrigger=PropertyChanged}" />
