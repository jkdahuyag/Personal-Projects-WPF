<Page x:Class="Dahuyag_Final_Project_Software_Design.SubWindows.Edit.EditProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dahuyag_Final_Project_Software_Design.SubWindows.Edit"
      Title="Edit Project"
    d:DesignHeight="600"
    d:DesignWidth="800"
    WindowHeight="600"
    WindowWidth="800"
    Loaded="ConfigureProjectPage_OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Background="#FF005FB8">
            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Foreground="#f9f9f9"
                Text="Configure Project" />
        </Grid>
        <Grid Margin="10,10,0,10" Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Background="Transparent"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Project Info" />
                <Grid Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="TxtBoxDescription"
                        Grid.Column="1"
                        Width="270"
                        Height="100"
                        Margin="5"
                        Padding="5,5,5,5"
                        VerticalContentAlignment="Top"
                        Text="{Binding Path=ProjectDescriptionInput, Delay=500, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="100"
                        Height="20"
                        Margin="5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="Gray"
                        FontSize="14"
                        Text="Description"
                        TextAlignment="Center" />
                </Grid>

                <StackPanel Grid.Row="2" Margin="0,20,10,0">
                    <TextBox
                        x:Name="TxtBoxEstimatedBudget"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding Path=ProjectEstimatedBudgetInput, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Center" />
                    <TextBlock
                        Background="Gray"
                        FontSize="14"
                        Text="Estimated Budget"
                        TextAlignment="Center" />
                </StackPanel>
                <Grid Margin="0,20,10,0" Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <DatePicker
                            x:Name="DtpEstimateDateStart"
                            Height="30"
                            SelectedDate="{Binding Path=EstimatedDateStartInput, FallbackValue=1 1 2023, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Estimate Date Start"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <DatePicker
                            x:Name="DtpEstimateDateEnd"
                            Height="30"
                            SelectedDate="{Binding Path=EstimatedDateEndInput, FallbackValue=1 1 2023, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Estimate Date End"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
                <Grid Margin="0,20,10,0" Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,10,0">
                        <DatePicker
                            x:Name="DtpDateStart"
                            Height="30"
                            SelectedDate="{Binding Path=DateStartInput, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Date Start"
                            TextAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <DatePicker
                            x:Name="DtpDateEnd"
                            Height="30"
                            SelectedDate="{Binding Path=DateEndInput, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Date End"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
                <Grid Margin="0,20,10,0" Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,0,10,0">
                        <DatePicker
                            x:Name="DtpDateSigned"
                            Height="30"
                            SelectedDate="{Binding Path=DateSignedInput, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock
                            Background="Gray"
                            FontSize="14"
                            Text="Date Signed"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Margin="60,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
