                    Width="80"
                    Height="35"
                    Margin="10"
                    Padding="10,0"
                    Click="BtnPrevPage_OnClick"
                    Content="Back"
                    FontSize="20" />
                <Button
                    x:Name="BtnNextPage"
                    Width="80"
                    Height="35"
                    Margin="10"
                    Padding="10,0"
                    Click="BtnNextPage_OnClick"
                    Content="Next"
