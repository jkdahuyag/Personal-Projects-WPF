                                    Height="25"
                                    Margin="5"
                                    Click="BtnUpSkillHierarchy_OnClick">
                                    <Image Source="../../Images/arrow-up-svgrepo-com.png" Stretch="Fill" />
                                </Button>
                                <Button
                                    x:Name="BtnDownSkillHierarchy"
                                    Width="25"
                                    Height="25"
