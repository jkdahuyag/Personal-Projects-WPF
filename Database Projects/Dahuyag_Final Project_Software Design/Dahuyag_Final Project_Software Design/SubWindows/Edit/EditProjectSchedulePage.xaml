                        Grid.Row="5"
                        Margin="10"
                        HorizontalAlignment="Right"
                        FontStyle="Italic"
                        VerticalAlignment="Bottom"
                        Foreground="OrangeRed"
                        Text="{Binding Path=ProjectScheduleListErrorsInText, FallbackValue='Sample error'}" />

